/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.add_layer {
  width: 100%;
  height: 100%;
  background: rgba(66, 69, 72, 0.74);
  position: fixed;
  left: 0;
  top: 0;
}

.add_layer input,
.add_layer textarea,
.add_layer button {
  width: 80%;
  margin: 0 auto;
  margin: 15px auto;
  font-size: 14px;
  padding: 10rpx;
}

.add_layer input,
.add_layer textarea {
  background: #fff;
}

.diary_list {
  border-bottom: 1px solid #ccc;
  margin: 0px 0;
  padding: 10px;
  position: relative;
}

.diary_list text {
  font-size: 16px;
  color: #1e1e1e;
}

.diary_list view {
  font-size: 14px;
  padding: 5px 0
}

.diary_list button {
  position: absolute;
  right: 15px;
  top: 12px;
}

.diary_list button.modify {
  right: 90px;
}

.toWrite {
  width: 100rpx;
  height: 100rpx;
  display: block;
  position: fixed;
  right: 74rpx;
  bottom: 100rpx;
  border-radius: 50%;
  z-index: 999;
}

.page__ft {
  padding-top: 40px;
  padding-bottom: 10px;
}


.searchbar-result {
  border: none;
  margin-top: 0;
  font-size: 14px;
}

.searchbar-result:before {
  display: none;
}

.tag-radius {
  border-radius: 5%;
  padding: 0.1em;
  margin-right: 1em;
  position: relative;
  left: 0;
  top: 0;
}

.tag-active {
  border: 1px solid #ff629a;
  color: #ff629a;
}

.tag-inactive {
  border: 1px solid #999999;
  color: #999999;
}